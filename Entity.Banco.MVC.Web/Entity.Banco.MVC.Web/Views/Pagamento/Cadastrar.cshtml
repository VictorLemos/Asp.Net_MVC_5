@model Entity.Banco.MVC.Web.Models.Pagamento
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Pagamento</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (@Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(p => p.Lavagem, "Tipo da Lavagem")
        @Html.DropDownListFor(p => p.LavagemId,
             ViewBag.lavagens as SelectList,
             "Selecione",
             new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Valor)
        @Html.TextBoxFor(p => p.Valor,
                new
                {
                    @class = "form-control",
                    placeholder = "Digite o valor"
                })
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar"
               class="btn btn-primary" />
    </div>
}