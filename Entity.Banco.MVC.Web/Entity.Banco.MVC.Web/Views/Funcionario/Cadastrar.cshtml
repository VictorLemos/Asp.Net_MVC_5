@model Entity.Banco.MVC.Web.Models.Funcionario
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Funcionario</h2>

<!--Mensagem de sucesso-->
@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (@Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(f => f.Nome)
        @Html.TextBoxFor(f => f.Nome,
                new 
                { @class="form-control",
                  placeholder= "Digite o nome"})
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.DataNascimento)
        @Html.TextBoxFor(f => f.DataNascimento,
                new
                {
                    @class = "form-control",
                    placeholder = "Selecione a Data de Nascimento"
                })
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.Salario)
        @Html.TextBoxFor(f => f.Salario,
                new
                {
                    @class = "form-control",
                    placeholder = "Digite o Salário"
                })
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.Cargo)
        @Html.DropDownListFor(f => f.CargoId,
            ViewBag.cargos as SelectList,
            "Selecione",
            new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(f => f.Ativo)
        @Html.LabelFor(f => f.Ativo)
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar"
               class="btn btn-primary" />
    </div>

}

<script>
    $().ready(function () {
        //Habilita o datepicker no campo dataNascimento
        $("#DataNascimento").datepicker();
    })
</script>