@model List<Code.Cadastro.UI.Web.Models.Professor>
@{
    ViewBag.Title = "Lista de professores";
}

<h2>Listar</h2>
@if (@TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<table class="table table-striped">
    <tr>
        <th>Nome</th>
        <th>Telefone</th>
        <th>Data de Admissão</th>
        <th>Hora/Aula</th>
        <th>Data de Nascimento</th>
        <th>E-mail</th>
        <th>Cargo</th>
        <th></th>
    </tr>
        @foreach (var prof in Model)
    {
         <tr>
             <td>@prof.Nome</td>
             <td>@prof.Telefone</td>
             <td>@prof.DataAdmissao</td>
             <td>@prof.HoraAula</td>
             <td>@prof.DataNascimento</td>
             <td>@prof.Email</td>
             <td>@prof.Cargo.Titulo</td>
             <td>
                 @Html.ActionLink("Editar",
                "Editar", new { id = @prof.ProfessorId },
                    new { @class = "btn btn-warning" })
                 @Html.ActionLink("Excluir", "Excluir",
                    new { id = @prof.ProfessorId },
                    new { @class = "btn btn-danger" })
             </td>
         </tr>
    }
</table>